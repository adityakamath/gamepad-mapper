{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "rewrites": [
        {
            "source": "/gamepad-mapper/:path*",
            "destination": "/:path*"
        }
    ],
    "trailingSlash": false
} 